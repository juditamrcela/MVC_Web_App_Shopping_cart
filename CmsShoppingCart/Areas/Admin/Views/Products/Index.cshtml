@model IEnumerable<CmsShoppingCart.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Proizvodi</h1>

<p>
    <a asp-action="Create">Stvori novi</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
               Naziv
            </th>

            <th>
                Cijena
            </th>
            <th>
               Kategorija
            </th>
            <th>
                Slika
            </th>
            <th>
                Količina
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.Name
                </td>

                <td>
                    @item.Price.ToString("C2")
                </td>
                <td>
                    @item.Category.Name
                </td>
                <td>
                   <img src="~/Media/Products/@item.Image" width="100" alt=""/>
                </td>
                <td>
                    @item.Quantity.ToString()
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>|
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>|
                    <a class="confirmDeletion" asp-action="Delete" asp-route-id="@item.Id">Delete</a>




                </td>
            </tr>
        }
    </tbody>
</table>
<div class="d-flex w-100 justify-content-center">
    <pagination page-count="@ViewBag.TotalPages" page-target="/admin/products" page-number="@ViewBag.PageNumber" page-range="ViewBag.PageRange"></pagination>

</div>

