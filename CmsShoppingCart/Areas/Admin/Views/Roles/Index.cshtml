@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<h1>Uloge</h1>

<p>
    <a asp-action="Create">Stvori novu</a>
</p>
<table class="table" >
    <thead>
        <tr>
            <th>Id</th>
            <th>Uloga</th>
            <th>Korisnici</th>
            <th></th>

            
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>

                <td>@role.Id</td>
                <td>@role.Name</td>
                <td user-role="@role.Id"></td>

                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id">Edit</a>|
                    <a class="confirmDeletion" asp-action="Delete" asp-route-id="@role.Id">Delete</a>


                </td>
            </tr>
        }
    </tbody>
</table>


